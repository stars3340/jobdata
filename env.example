# 智能招聘数据分析平台 - 环境变量配置
# 复制此文件为 .env 并填入真实的配置信息

# 应用配置
APP_NAME=智能招聘数据分析平台
APP_HOST=0.0.0.0
APP_PORT=8050
APP_DEBUG=False

# 数据库配置
DB_HOST=your-database-host.com
DB_PORT=3306
DB_USER=your-username
DB_PASSWORD=your-password
DB_NAME=recruit-db
DB_CHARSET=utf8mb4

# 安全配置
SECRET_KEY=your-secret-key-here

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 缓存配置 (可选)
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300 